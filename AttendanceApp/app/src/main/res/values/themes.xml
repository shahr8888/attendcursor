<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.CursorAttendance" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/cursor_accent_cyan</item>
        <item name="colorPrimaryVariant">@color/cursor_accent_blue</item>
        <item name="colorOnPrimary">@color/cursor_text_primary</item>
        
        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/cursor_accent_green</item>
        <item name="colorSecondaryVariant">@color/cursor_accent_yellow</item>
        <item name="colorOnSecondary">@color/cursor_text_primary</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/cursor_primary</item>
        <item name="android:navigationBarColor">@color/cursor_primary</item>
        
        <!-- Background colors -->
        <item name="android:colorBackground">@color/cursor_primary</item>
        <item name="colorSurface">@color/cursor_surface</item>
        <item name="colorSurfaceVariant">@color/cursor_surface_variant</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/cursor_text_primary</item>
        <item name="android:textColorSecondary">@color/cursor_text_secondary</item>
        <item name="android:textColorTertiary">@color/cursor_text_tertiary</item>
        
        <!-- Error colors -->
        <item name="colorError">@color/cursor_error</item>
        <item name="colorOnError">@color/cursor_text_primary</item>
        
        <!-- Custom attributes -->
        <item name="cursorCardBackground">@color/cursor_surface</item>
        <item name="cursorBorderColor">@color/cursor_border</item>
        <item name="cursorAccentColor">@color/cursor_accent_cyan</item>
    </style>
    
    <!-- Card style -->
    <style name="Widget.CursorAttendance.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/cursor_surface</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="strokeColor">@color/cursor_border</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Button styles -->
    <style name="Widget.CursorAttendance.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/cursor_accent_cyan</item>
        <item name="android:textColor">@color/cursor_text_primary</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.CursorAttendance.Button.Secondary" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/cursor_accent_blue</item>
        <item name="android:textColor">@color/cursor_accent_blue</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Text input styles -->
    <style name="Widget.CursorAttendance.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/cursor_surface_variant</item>
        <item name="boxStrokeColor">@color/cursor_accent_cyan</item>
        <item name="hintTextColor">@color/cursor_accent_cyan</item>
    </style>
    
    <!-- Toolbar style -->
    <style name="Widget.CursorAttendance.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/cursor_primary</item>
        <item name="titleTextColor">@color/cursor_text_primary</item>
        <item name="subtitleTextColor">@color/cursor_text_secondary</item>
    </style>
</resources>
